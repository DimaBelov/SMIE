@model SMIE.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form class="uk-form-stacked" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="uk-text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="uk-margin">
            <label asp-for="UserNameOrEmail" class="uk-form-label">User name or Email</label>
            <div class="uk-form-controls">
                <input class="uk-input" type="text" asp-for="UserNameOrEmail" />
            </div>
            <span class="uk-text-danger" asp-validation-for="UserNameOrEmail"></span>
        </div>
        <div class="uk-margin">
            <label asp-for="Password" class="uk-form-label">Password</label>
            <div class="uk-form-controls">
                <input class="uk-input" asp-for="Password" />
            </div>
            <span class="uk-text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="uk-margin">
            <input type="submit" value="Login" class="uk-button uk-button-primary login-btn" />
        </div>

        <a class="uk-button uk-button-default sign-up-btn" asp-action="SignUp" asp-controller="Account">Sign Up</a>
    </div>
</form>


@section Styles {
    <link href="/dist/styles/pages/login/login.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
