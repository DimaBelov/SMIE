@model SMIE.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary login-btn" />
        </div>

        <a class="btn btn-default registration-btn" asp-action="Register" asp-controller="Account">Registration</a>
    </div>
</form>

@section Styles {
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/dist/styles/pages/login/login.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}