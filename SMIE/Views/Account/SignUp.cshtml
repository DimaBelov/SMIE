@model SMIE.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Sign Up</h2>

<form asp-action="SignUp" asp-controller="Account" asp-anti-forgery="true">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Email</label><br />
            <input class="form-control" type="text" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label><br />
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Sign Up" class="btn btn-primary sign-up-btn" />
        </div>
    </div>
</form>

@section Styles {
    <link href="/dist/styles/pages/sign-up/sign-up.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}